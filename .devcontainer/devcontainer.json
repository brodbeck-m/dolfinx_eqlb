{
	"name": "dolfinx_eqlb",
	"build": {
	  "dockerfile": "Dockerfile"
	},
	"settings": {
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "/bin/bash"
			}
		},

		"python.defaultInterpreterPath": "/usr/bin/python3"
	},

	"mounts": [
		"source=${localWorkspaceFolder},target=/root/development,type=bind"
	  ],

	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-vscode.cpptools"
	]
  }
